{
  "name": "buffs",
  "version": "0.9.2",
  "description": "A filesystem utility, supporting batch & in-memory operations.",
  "main": "lib/index.cjs",
  "module": "lib/index.mjs",
  "files": [
    "lib"
  ],
  "types": "lib/index.d.ts",
  "exports": {
    ".": {
      "types": "./lib/index.d.ts",
      "import": "./lib/index.mjs",
      "require": "./lib/index.cjs"
    },
    "./memory-fs": {
      "types": "./lib/memory-fs.d.ts",
      "import": "./lib/memory-fs.mjs",
      "require": "./lib/memory-fs.cjs"
    }
  },
  "scripts": {
    "build": "rm -rf ./lib && tsup",
    "build:watch": "rm -rf ./lib && tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepublishOnly": "npm run build",
    "typecheck": "tsc --noEmit -p tsconfig.typecheck.json"
  },
  "repository": "https://github.com/dabbott/buffs",
  "license": "MIT",
  "dependencies": {
    "@types/node": "^22.19.0",
    "tree-visit": "0.6.0"
  },
  "devDependencies": {
    "@types/micromatch": "^4.0.10",
    "memfs": "^4.51.1",
    "micromatch": "^4.0.8",
    "prettier": "^3.6.2",
    "tsup": "^8.3.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.15"
  },
  "prettier": {
    "proseWrap": "never",
    "singleQuote": true,
    "trailingComma": "es5",
    "semi": false
  },
  "packageManager": "pnpm@10.21.0"
}
